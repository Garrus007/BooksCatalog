@using BooksCatalog.Helpers
@model BooksCatalog.ViewModels.SideMenuViewModel


<div class="col-sm-3 col-md-2 sidebar">
    <h3 class="title">
        @Model.MenuTitle
    </h3>
    @if (Model != null)
    {
        foreach (var link in Model.MenuItems)
        {
            @Html.MenuButton(link);
        }
    }
</div>