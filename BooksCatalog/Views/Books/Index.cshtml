@using BooksCatalog.ViewModels
@model BooksListViewModel
@{
    ViewBag.Title = "Index";
}

@Html.Partial("SidebarPartial",new SideMenuViewModel() {MenuItems = Model.MenuItems, MenuTitle = "Категории"})
<div class="container">
    <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2">
        <h1 class="page-header">
            @if (Model.CategoryName != null)
            {
                @Model.CategoryName
            }
            else
            {
                <span>Все книги</span>
            }
        </h1>


        @foreach (var book in Model.Books)
        {
            @Html.Partial("BookCardPartial", book)
        }

    </div>
</div>