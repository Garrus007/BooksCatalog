@using BooksCatalog.ViewModels
@model BooksListViewModel
@{
    ViewBag.Title = "Index";
}

@Html.Partial("SidbarPartial",Model.MenuItems)
<div class="container">
    <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2">
        @Url.Action("Category", "Books", new {id=1})
        <h1 class="page-header">WTF</h1>

        @foreach (var book in Model.Books)
        {
            @Html.Partial("BookCardPartial", book)
        }

    </div>
</div>